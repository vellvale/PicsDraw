<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/very_light_pink">

    <TextView
        android:id="@+id/opq_txt"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="100%"
        android:textColor="@color/camo_green"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/opacity_seek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:outlineAmbientShadowColor="@color/sandy"
        android:outlineSpotShadowColor="@color/dark_brown" />

    <Button
        android:id="@+id/opq_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sienna"
        android:text="OK" />
</LinearLayout>