<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<!-- Чтобы создать закругленную кнопку, используем два многослойных объекта Shape,
один из которых представляет собой прямоугольник, а другой - закругленную обводку.
Виньетки цвета фона главной activity с прозрачностью в середине, через которую виден цвет каждой кнопки -->

    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="3dp"
                android:color="@color/army_green" />
            <solid android:color="#00000000" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <stroke
                android:width="3dp"
                android:color="@color/army_green" />
            <solid android:color="#00000000" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>